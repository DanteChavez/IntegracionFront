# Frontend Environment Variables

# URL del backend API
# En desarrollo local usar HTTP si el backend no tiene HTTPS configurado
REACT_APP_API_URL=https://localhost:3000/api

# Puerto del frontend (opcional, ya configurado en package.json)
PORT=3001

# Timeout para requests al backend (milisegundos)
REACT_APP_API_TIMEOUT=30000

# Habilitar logs de desarrollo
REACT_APP_DEBUG=true

# Ambiente
NODE_ENV=development

# No abrir navegador autom√°ticamente al iniciar
BROWSER=none

# Habilitar HTTPS en desarrollo (usar certificados del backend)
HTTPS=true
SSL_CRT_FILE=../Backend/secrets/pulgashopcert.pem
SSL_KEY_FILE=../Backend/secrets/pulgashopkey.pem
